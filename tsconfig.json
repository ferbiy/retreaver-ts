{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["DOM", "ES5", "ES2015.Promise"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src-ts",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": [
    "src-ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "lib",
    "src"
  ]
}